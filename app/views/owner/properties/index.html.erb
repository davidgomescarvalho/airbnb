<div class="mx-auto max-w-7xl lg:flex lg:gap-x-16 lg:px-8">

  <%= render 'shared/owner_sidebar' %>

  <main class="my-8 lg:flex-auto">
    <div>
      <h2 class="text-lg font-semibold leading-7 text-gray-900">Properties</h2>
      <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:gap-x-8">
        <% @properties.each do |property| %>
          <%= render 'properties/property_item', property: property, minimal_details: false  %>
        <% end %>
    </div>
    </div>
  </main>
</div>
