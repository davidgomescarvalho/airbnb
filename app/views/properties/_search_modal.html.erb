<div>
  <button data-action="click->modal#toggleModal" type="button" class="relative rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
    <span class="absolute -inset-2.5"></span>
    <span class="sr-only">Close panel</span>
    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
    </svg>
  </button>
  <div class="flex flex-col mx-6 my-6">
    <h2 class="text-2xl font-medium leading-6 text-gray-900" id="modal-title">Share this place</h2>

    <%= form_with url: root_path, class: "mt-6 grid grid-cols-1 gap-y-4" do |f| %>
      <div class="grid grid-cols-2 items-center">
        <%= f.label 'Select Country', class: "block text-base leading-6 text-gray-900" %>
        <%= f.country_select :country_code, class: "rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6" %>
      </div>

      <div class="grid grid-cols-2 items-center">
        <%= f.label :check_in, class: "block text-base leading-6 text-gray-900" %>
        <input
          type="text"
          name="checkin"
          id="checkin"
          class="rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6"
          value="<%= Date.tomorrow.strftime('%Y-%m-%d')%>"
          data-booking-target="checkin"
        >
      </div>

    <% end %>
  </div>
</div>
